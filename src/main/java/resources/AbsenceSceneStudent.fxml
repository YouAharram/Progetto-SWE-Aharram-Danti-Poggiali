<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AbsenceStudentSceneController">
   <children>
      <!-- Tabella per visualizzare le assenze -->
      <TableView fx:id="absenceTableView" layoutX="150.0" layoutY="80.0" prefHeight="350.0" prefWidth="700.0">
         <columns>
            <TableColumn fx:id="dateColumn" minWidth="4.800048828125" prefWidth="350.0" text="Date" />
            <TableColumn fx:id="statusColumn" minWidth="4.800048828125" prefWidth="350.0" text="Status" />
         </columns>
      </TableView>

      <!-- Label per mostrare lo status dell'assenza -->
      <Label fx:id="attendanceStatusLabel" layoutX="15.0" layoutY="534.0" prefHeight="18.0" prefWidth="300.0" />

      <!-- Bottone per tornare alla scena principale -->
      <Button fx:id="back" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#switchToStudentScene" prefHeight="30.0" prefWidth="90.0" text="Back" />

      <!-- DatePicker per selezionare una data -->
      <DatePicker fx:id="datePicker" layoutX="13.0" layoutY="500.0" />

      <!-- Etichetta per indicare l'uso del DatePicker -->
      <Label layoutX="13.0" layoutY="475.0" prefHeight="18.0" prefWidth="147.0" text="Select date" />

      <!-- Contenitore HBox per disporre i pulsanti orizzontalmente -->
      <HBox alignment="CENTER" layoutX="500.0" layoutY="500.0" spacing="20">
         <!-- Pulsante per mostrare tutte le assenze -->
         <Button fx:id="showAllButton" mnemonicParsing="false" onAction="#showAllAbsences" prefHeight="50.0" prefWidth="200.0" text="Show all absences" />
      </HBox>
      <!-- Pulsante per mostrare le assenze per data -->
      <Button fx:id="showByDateButton" layoutX="293.0" layoutY="500.0" mnemonicParsing="false" onAction="#showAbsenceByDate" prefHeight="50.0" prefWidth="200.0" text="Show" />
   </children>
</AnchorPane>
