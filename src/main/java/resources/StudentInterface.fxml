<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.StudentSceneManager" stylesheets="@style.css">
   <children>
      <!-- GridPane per le etichette -->
      <GridPane layoutX="150" layoutY="20" hgap="20" vgap="20" alignment="CENTER">
         <!-- Prima riga (Student) -->
         <Label text="Student:" GridPane.rowIndex="0" GridPane.columnIndex="0">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Label fx:id="nameLabel" text="Name student" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Label fx:id="surnameLabel" text="Surname student" GridPane.rowIndex="0" GridPane.columnIndex="2">
            <font>
               <Font size="18.0" />
            </font>
         </Label>

         <!-- Seconda riga (Class) -->
         <Label text="Class:" GridPane.rowIndex="1" GridPane.columnIndex="0">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Label fx:id="classLabel" text="Name class" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
      </GridPane>

      <!-- Contenitore VBox per i pulsanti -->
      <VBox layoutX="332.0" layoutY="150.0" spacing="15">
         <Button fx:id="gradesButton" mnemonicParsing="false" onAction="#switchToGradesScene" text="Grades" prefHeight="50.0" prefWidth="300.0" />
         <Button fx:id="homeworkAndLessonButton" mnemonicParsing="false" onAction="#switchToHomeworkAndLessonScene" text="Homework and Lesson" prefHeight="50.0" prefWidth="300.0" />
         <Button fx:id="disciplinaryReportButton" mnemonicParsing="false" onAction="#switchToDisciplinaryReportScene" text="Disciplinary Report" prefHeight="50.0" prefWidth="300.0" />
         <Button fx:id="avarageGradeButton" mnemonicParsing="false" onAction="#switchToAvarageGradeScene" text="Average Grade" prefHeight="50.0" prefWidth="300.0" />
         <Button fx:id="absenceButton" mnemonicParsing="false" onAction="#switchToAbsenceScene" text="Attendance" prefHeight="50.0" prefWidth="300.0" />
      </VBox>
   </children>
</AnchorPane>
