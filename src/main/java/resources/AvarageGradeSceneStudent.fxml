      <!-- ChoiceBox per scegliere la strategia -->
      <ChoiceBox fx:id="strategyChoiceBox" layoutX="54.0" layoutY="128.0" prefWidth="150.0" />

      <!-- Etichetta per indicare la scelta della strategia -->
      <Label layoutX="59.0" layoutY="96.0" prefHeight="18.0" prefWidth="102.0" text="Strategy" />

