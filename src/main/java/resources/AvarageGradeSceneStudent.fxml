<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AvarageGradeStudentScene">
   <children>
      <!-- Tabella per visualizzare i soggetti e la loro media -->
      <TableView fx:id="tableView" layoutX="251.0" layoutY="55.0" prefHeight="400.0" prefWidth="700.0">
         <columns>
            <TableColumn fx:id="subjectColumn" minWidth="4.8" prefWidth="350.0" text="Subject" />
            <TableColumn fx:id="averageColumn" minWidth="4.8" prefWidth="350.0" text="Average" />
